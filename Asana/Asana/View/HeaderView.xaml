<UserControl x:Class="Asana.View.HeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Asana.View"
             xmlns:model ="clr-namespace:Asana.Model"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="m_nav_bar" TargetType="{x:Type Button}"  >
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="WhiteSmoke"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="95"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Calibri"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#68465f"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="#FF9D79B0" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="85"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="70*"/>
        </Grid.ColumnDefinitions>

        <!--Header items-->
        <Image   Grid.Column="5" Grid.Row="0" ToolTip="Activities" Source="../Resources/Images/activities.png"
                        VerticalAlignment="Center"
                         HorizontalAlignment="Center" Height="20"  Width="20"   ></Image>


        <Image  ToolTip="Chat" Grid.Column="6" Grid.Row="0" Source="../Resources/Images/converstation.png"
                       VerticalAlignment="Stretch"
                         HorizontalAlignment="Center" Height="20"  Width="20"   ></Image>

        <Image  Grid.Column="7" ToolTip="Settings" Grid.Row="0" Source="../Resources/Images/Settings.png"
                      VerticalAlignment="Stretch"
                         HorizontalAlignment="Center" Height="30"  Width="20"   ></Image>

        <Image Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="25" Height="25" Source="pack://application:,,,/Asana;component/Resources/Images/menu.png"/>

        <TextBlock Grid.Column="1" FontSize="27" FontWeight="Bold" 
                               HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="WhiteSmoke" Height="36" Width="83" FontFamily="Calibri" >Project</TextBlock>

 

        <Button  Content="Dashboard" Grid.Column="2" Grid.Row="0"
                       VerticalAlignment="Center"
                         HorizontalAlignment="Right" Margin="0 0 4 0" Style="{StaticResource m_nav_bar}"  ></Button>



        <Button  Content="Search" VerticalAlignment="Center" Grid.Column="3"
                        HorizontalAlignment="Center"  Style="{StaticResource m_nav_bar}">
           
        </Button>


        <Button  Content="Settings" VerticalAlignment="Center" Grid.Column="4"
                        HorizontalAlignment="Left" Margin="4 0 0 0" Style="{StaticResource m_nav_bar}" />
        <Menu Grid.Column="9" Background="Transparent"  VerticalAlignment="Center" HorizontalAlignment="Center" >
            <MenuItem Header="{x:Static model:CurrentUser.Username}"  Foreground="WhiteSmoke"  FontSize="15" FontFamily="Calibri" >
                <MenuItem Foreground="WhiteSmoke"  Header="Account"/>
                <MenuItem Foreground="WhiteSmoke" Header="Language">
                    <MenuItem Foreground="WhiteSmoke" Header="Az"/>
                    <MenuItem Foreground="WhiteSmoke" Header ="Ru"/>
                </MenuItem>
                <MenuItem Header="Log Off"/>
            </MenuItem>

        </Menu>

        <!--Header items end-->





    </Grid>
</UserControl>
