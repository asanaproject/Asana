<UserControl x:Class="Asana.View.HeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Asana.View"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="800">
    <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="#FF9D79B0" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="85"/>
            <ColumnDefinition Width="70*"/>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="70*"/>
        </Grid.ColumnDefinitions>

        <!--Header items-->
        <Image   Grid.Column="4" Grid.Row="0" ToolTip="Activities" Source="../Resources/Images/activities.png"
                        VerticalAlignment="Center"
                         HorizontalAlignment="Center" Height="20"  Width="20"   ></Image>


        <Image  ToolTip="Chat" Grid.Column="5" Grid.Row="0" Source="../Resources/Images/converstation.png"
                       VerticalAlignment="Stretch"
                         HorizontalAlignment="Center" Height="20"  Width="20"   ></Image>

        <Image  Grid.Column="6" ToolTip="Settings" Grid.Row="0" Source="../Resources/Images/Settings.png"
                      VerticalAlignment="Stretch"
                         HorizontalAlignment="Center" Height="30"  Width="20"   ></Image>


        <TextBlock Grid.Column="0" Grid.Row="0" FontSize="25" FontWeight="Bold" 
                               HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Width="83" >Project</TextBlock>



        <Button  Content="Dashboard" Grid.Column="1" Grid.Row="0"
                       BorderThickness="0" FontSize="10" Background="#FF9D79B0" VerticalAlignment="Center"
                         HorizontalAlignment="Center" Height="30"  Width="90"   ></Button>



        <Button  Content="Search" VerticalAlignment="Center" Grid.Column="2"
                        HorizontalAlignment="Center" FontSize="10" BorderThickness="0" Background="#FF9D79B0"
                                 Height="30"  Width="70"  />



        <Button  Content="Settings" VerticalAlignment="Center" Grid.Column="3" 
                        HorizontalAlignment="Center" FontSize="10" BorderThickness="0" 
                             Background="#FF9D79B0" Height="30"  Width="80"  />

        <Menu Grid.Column="8" Background="Transparent"  VerticalAlignment="Center" HorizontalAlignment="Center" >
            <MenuItem Header="UserName" FontSize="10" >
                <MenuItem Header="Account"/>
                <MenuItem Header="Language">
                    <MenuItem Header="Az"/>
                    <MenuItem Header ="Ru"/>
                </MenuItem>
            </MenuItem>

        </Menu>

        <!--Header items end-->





    </Grid>
</UserControl>
