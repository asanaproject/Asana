<UserControl x:Class="Asana.View.ProjectsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Asana.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#c850c0" Offset="0"></GradientStop>
            <GradientStop Color="#4158d0" Offset="0.9"></GradientStop>
            <LinearGradientBrush.Transform>
                <RotateTransform CenterX="60" CenterY="30" Angle="-135" />
            </LinearGradientBrush.Transform>
        </LinearGradientBrush>
    </UserControl.Background>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="0.1*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition/>
            <RowDefinition  Height="0.1*"/>
        </Grid.RowDefinitions>

        <Border HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="1"  VerticalAlignment="Stretch"  Background="White" BorderBrush="White"  CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions >
                    <RowDefinition Height="19*"/>
                    <RowDefinition Height="40*"/>
                    <RowDefinition Height="106*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBox  Grid.Row="1" Grid.Column="1" Name="SearchtxtBox" HorizontalAlignment="Left" VerticalAlignment="Center" Width="330"></TextBox>
                <TextBlock Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="15" FontStyle="Italic" IsHitTestVisible="False" Text="Search.."  Foreground="DarkGray">
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=SearchtxtBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <TextBlock Grid.Row="1" Text="Projects" Foreground="DarkGray" Margin="5" 
                           FontWeight="Bold" VerticalAlignment="Top" FontSize="15" Height="30" HorizontalAlignment="Left"></TextBlock>
                <Button Grid.Row="1" VerticalAlignment="Center" Content="Create" Height="25" Width="70"
                        Background="#FF36C1E4" FontSize="10" HorizontalAlignment="Left" Margin="5,0,0,0" ></Button>

                <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="#FF9D79B0" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80*"/>
                        <ColumnDefinition Width="90*"/>
                        <ColumnDefinition Width="60*"/>
                        <ColumnDefinition Width="90*"/>
                        <ColumnDefinition Width="100*"/>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="60*"/>
                    </Grid.ColumnDefinitions>

                    <!--Header items-->
                    <Image   Grid.Column="6" Grid.Row="0" Source="../Resources/Images/activities.png"
                        VerticalAlignment="Stretch"
                         HorizontalAlignment="Center" Height="20"  Width="20"   ></Image>


                    <Image   Grid.Column="7" Grid.Row="0" Source="../Resources/Images/converstation.png"
                       VerticalAlignment="Stretch"
                         HorizontalAlignment="Left" Height="20"  Width="20"   ></Image>

                    <Image  Grid.Column="8" Grid.Row="0" Source="../Resources/Images/Settings.png"
                      VerticalAlignment="Stretch"
                         HorizontalAlignment="Left" Height="30"  Width="20"   ></Image>


                    <TextBlock Grid.Column="0" Grid.Row="0" FontSize="25" FontWeight="Bold" 
                               HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Width="83" >Project</TextBlock>



                    <Button  Content="Dashboard" Grid.Column="1" Grid.Row="0"
                       BorderThickness="0" Background="#FF9D79B0" VerticalAlignment="Center"
                         HorizontalAlignment="Center" Height="30"  Width="110"   ></Button>



                    <Button  Content="Search" VerticalAlignment="Center" Grid.Column="2"
                        HorizontalAlignment="Center" BorderThickness="0" Background="#FF9D79B0"
                                 Height="30"  Width="80"    />

                    <Button  Content="Reporting" VerticalAlignment="Center" Grid.Column="3"
                        HorizontalAlignment="Center"  BorderThickness="0" 
                             Background="#FF9D79B0" Height="30"  Width="110"  />




                    <Button  Content="Configurations" VerticalAlignment="Center" Grid.Column="4" 
                        HorizontalAlignment="Center" BorderThickness="0" 
                             Background="#FF9D79B0" Height="30"  Width="120"  />
                    <!--Header items end-->





                </Grid>
            </Grid>

        </Border>
    </Grid>
</UserControl>
