<UserControl x:Class="Asana.View.ProjectsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Asana.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#c850c0" Offset="0"></GradientStop>
            <GradientStop Color="#4158d0" Offset="0.9"></GradientStop>
            <LinearGradientBrush.Transform>
                <RotateTransform CenterX="60" CenterY="30" Angle="-135" />

            </LinearGradientBrush.Transform>
        </LinearGradientBrush>
    </UserControl.Background>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="0.1*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition/>
            <RowDefinition  Height="0.1*"/>
        </Grid.RowDefinitions>

        <Border HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="1"  VerticalAlignment="Stretch"  Background="White" BorderBrush="White"  CornerRadius="8">

            <Grid>
                <Grid.RowDefinitions >
                    <RowDefinition Height="19*"/>
                    <RowDefinition Height="106*"/>
                </Grid.RowDefinitions>



                <Grid Grid.Row="0" Background="#FF9D79B0" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30*"/>
                        <ColumnDefinition Width="80*"/>
                        <ColumnDefinition Width="90*"/>
                        <ColumnDefinition Width="60*"/>
                        <ColumnDefinition Width="90*"/>
                        <ColumnDefinition Width="100*"/>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="60*"/>
                    </Grid.ColumnDefinitions>

                    <Image Grid.Column="0" Source="pack://application:,,,/Asana;component/Resources/Images/menu.png" VerticalAlignment="Stretch" Height="20" Width="20"/>
                  
                    <Image   Grid.Column="7" Source="../Resources/Images/activities.png"
                        VerticalAlignment="Stretch"
                         HorizontalAlignment="Center" Height="20"  Width="20"/>


                    <Image   Grid.Column="8" Source="../Resources/Images/converstation.png"
                       VerticalAlignment="Stretch"
                         HorizontalAlignment="Left" Height="20"  Width="20"/>

                    <Image  Grid.Column="9"  Source="../Resources/Images/Settings.png"
                      VerticalAlignment="Stretch"
                         HorizontalAlignment="Left" Height="30"  Width="20"/>


                    <TextBlock Grid.Column="1" FontSize="25" FontWeight="Bold" 
                               HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Width="83" >Project</TextBlock>



                    <Button  Content="Dashboard" Grid.Column="2"
                       BorderThickness="0" Background="#FF9D79B0" VerticalAlignment="Center"
                         HorizontalAlignment="Center" Height="30"  Width="110"/>



                    <Button  Content="Search" VerticalAlignment="Center" Grid.Column="3"
                        HorizontalAlignment="Center" BorderThickness="0" Background="#FF9D79B0"
                                 Height="30"  Width="80"    />

                    <Button  Content="Reporting" VerticalAlignment="Center" Grid.Column="4"
                        HorizontalAlignment="Center"  BorderThickness="0" 
                             Background="#FF9D79B0" Height="30"  Width="110"  />




                    <Button  Content="Configurations" VerticalAlignment="Center" Grid.Column="5" 
                        HorizontalAlignment="Center" BorderThickness="0" 
                             Background="#FF9D79B0" Height="30"  Width="120"  />


                </Grid>
            </Grid>

        </Border>
    </Grid>
</UserControl>
