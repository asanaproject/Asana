<Page x:Class="Asana.View.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Asana.View"
      mc:Ignorable="d" 
      d:DesignHeight="50" d:DesignWidth="800"
      Title="Page1">

    <Grid HorizontalAlignment="Stretch" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="0.3*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="0.3*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" FontSize="23" FontFamily="Roboto" FontWeight="DemiBold" VerticalAlignment="Center" >Title</TextBlock>
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" FontSize="23" FontFamily="Roboto" FontWeight="DemiBold" VerticalAlignment="Center" >Description</TextBlock>
        <TextBlock Grid.Column="4" HorizontalAlignment="Center" FontSize="23" FontFamily="Roboto" FontWeight="Light" VerticalAlignment="Center" Margin="0 0 0 0" Text="Time"></TextBlock>
    </Grid>
</Page>
